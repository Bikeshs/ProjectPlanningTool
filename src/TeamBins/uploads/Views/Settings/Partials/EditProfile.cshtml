@model TeamBins.Common.ViewModels.EditProfileVm
@{
    ViewBag.Title = "Edit Profile";
}
@using TechiesWeb.TeamBins.HelperMethods
<div class="page">
    <h3>Edit Profile</h3>
   
    <div class="tabbable tabs-left">
      
        <div class="tab-content">
            <div class="tab-pane active" >
                @Html.ValidationSummary()
                @using(Html.BeginForm("EditProfile","Settings"))
                {
                <table>
                    <tr>
                        <th>Name</th>
                        <td>@Html.TextBoxFor(s=>s.Name)</td>
                    </tr>
                    <tr>
                        <th>Email Address</th>
                        <td>@Html.TextBoxFor(s => s.Email, new { @readonly = "readonly" })</td>
                    </tr>

                    <tr>
                        <th></th>
                        <td>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </td>
                    </tr>
                </table>
                }
            </div>
            <br/>
            <p><i>Your gravatar will be used as the profile picture. Click <a href="http://en.gravatar.com">here</a> to add or edit your gravatar</i></p>               
            </div>
    </div>

</div>