@model TeamBins.Common.ViewModels.AddTeamMemberRequestVM
@{
    ViewBag.Title = "Create";
}

<div class="centralHead">Add New Member</div>
<div class="divPageContent">
    <div class="divForm">
      
        @using (Html.BeginForm())
        {
            <table class="tblform">
                <tr>
                    <th>Email Address</th>
                    <td>
                        <input type="text" asp-for="EmailAddress" />
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                        <input type="submit" value="Add" />
                    </td>
                </tr>
            </table>
            <input type="hidden" asp-for="TeamId"/>
        }
    </div>
</div>
