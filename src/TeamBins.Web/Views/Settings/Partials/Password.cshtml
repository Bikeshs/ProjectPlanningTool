@model TeamBins.Common.ViewModels.ChangePasswordVM
@{
    ViewBag.Title = "EditProfile";
}

<div>
    <h3>Update your password</h3>
   

        <div class="tab-content">
            <div class="tab-pane active">
                @Html.ValidationSummary()
                @using (Html.BeginForm())
                {
                    <table class="settings-form-tbl">
                        <tr>
                            <th>Current Password</th>
                            <td>@Html.TextBoxFor(s => s.CurrentPassword)</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>@Html.TextBoxFor(s => s.Password)</td>
                        </tr>
                        <tr>
                            <th>Confirm Password</th>
                            <td>@Html.TextBoxFor(s => s.ConfirmPassword)</td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </td>
                        </tr>
                    </table>
                }
            </div>


        </div>
    

</div>
