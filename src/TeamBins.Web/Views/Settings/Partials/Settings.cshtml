@{
    ViewBag.Title = "Settings";
}

@model TeamBins.Common.ViewModels.DefaultIssueSettings
<div>
    <h3>Issue Settings</h3>

        <div class="tab-content">
            <div class="tab-pane active">
                <div asp-validation-summary="All"></div>

                <form asp-action="Settings" asp-controller="Settings">
                    <table class="settings-form-tbl">
                        <tr>
                            <th>Default Project</th>
                            <td>
                                <select asp-for="SelectedProject" asp-items="Model.Projects">
                                    <option>Please select</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
    </div>

</div>
